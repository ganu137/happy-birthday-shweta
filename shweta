    <script>
        function cutCake() {
            let cake = document.getElementById("cakeImage");
            cake.classList.add("cut");
            setTimeout(() => {
                cake.src = "https://www.example.com/cake-cut.png"; // Change to cut cake image
                cake.classList.remove("cut");
            }, 500);
        }
    </script>
